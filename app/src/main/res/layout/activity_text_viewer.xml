<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/med_surface">

    <!-- File Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/med_green_primary"
        android:paddingHorizontal="20dp"
        android:paddingVertical="16dp"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Viewing File"
            android:textSize="11sp"
            android:textAllCaps="true"
            android:letterSpacing="0.08"
            android:textColor="#BBFFFFFF"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/fileNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="File"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <!-- File Content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/fileContentText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/med_text_primary"
            android:fontFamily="monospace"
            android:lineSpacingMultiplier="1.5"
            android:padding="20dp"/>
        <!--            android:textFamily="monospace"-->

    </ScrollView>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/med_divider"/>

    <!-- Back Button -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="Back"
        android:textSize="15sp"
        android:textAllCaps="false"
        android:textColor="@color/med_green_primary"
        android:backgroundTint="@android:color/transparent"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"/>
</LinearLayout>
