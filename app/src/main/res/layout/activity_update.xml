<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1a1a1a"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NFC Aggregator"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Tap Prompt (Initial State) -->
    <LinearLayout
        android:id="@+id/tapPromptContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#222222"
        android:padding="24dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tapPromptText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bring Nursing Device Near"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Waiting for NFC connection..."
            android:textSize="14sp"
            android:textColor="#cccccc"
            android:gravity="center" />

    </LinearLayout>

    <!-- Status Section (Active State) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="#222222"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Waiting for NFC device..."
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_marginBottom="12dp" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/transferProgressBar"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:progress="0"
            android:max="100"
            android:background="#333333"
            android:layout_marginBottom="12dp"
            />

        <!-- File Name Display -->
        <TextView
            android:id="@+id/fileNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ready to receive..."
            android:textSize="13sp"
            android:textColor="#cccccc"
            android:fontFamily="monospace" />

    </LinearLayout>

    <!-- Info Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="#222222"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textSize="13sp"
            android:textColor="#888888" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connected and ready for file aggregation"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:layout_marginTop="4dp" />

    </LinearLayout>

</LinearLayout>