<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/med_nfc_bg"
    android:padding="20dp">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NFC Aggregator"
        android:textSize="22sp"
        android:layout_marginTop="32dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:letterSpacing="0.02"/>

    <!-- Tap Prompt (Initial State) -->
    <LinearLayout
        android:id="@+id/tapPromptContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/med_nfc_card"
        android:padding="32dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tapPromptText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bring Nursing Device Near"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_marginBottom="12dp"
            android:lineSpacingMultiplier="1.2"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Waiting for NFC connection..."
            android:textSize="14sp"
            android:textColor="@color/med_nfc_text_dim"
            android:gravity="center"/>

    </LinearLayout>

    <!-- Status Section (Active State) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/med_nfc_card"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transfer Status"
            android:textSize="10sp"
            android:textAllCaps="true"
            android:letterSpacing="0.1"
            android:textColor="@color/med_nfc_text_dim"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Waiting for NFC device..."
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="14dp"/>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/transferProgressBar"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:progress="0"
            android:max="100"
            android:progressTint="@color/med_green_primary"
            android:progressBackgroundTint="@color/med_border"
            android:layout_marginBottom="14dp"/>

        <!-- File Name Display -->
        <TextView
            android:id="@+id/fileNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ready to receive..."
            android:textSize="13sp"
            android:textColor="@color/med_nfc_text_dim"
            android:fontFamily="monospace"/>

    </LinearLayout>

    <!-- Info Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/med_nfc_card">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textSize="10sp"
            android:textAllCaps="true"
            android:letterSpacing="0.1"
            android:textColor="@color/med_nfc_text_dim"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connected and ready for file aggregation"
            android:textSize="13sp"
            android:textColor="#FFFFFF"
            android:lineSpacingMultiplier="1.3"/>

    </LinearLayout>

</LinearLayout>
