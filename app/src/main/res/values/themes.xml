<resources>
    <style name="Theme.Aggregator" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/med_green_primary</item>
        <item name="colorPrimaryDark">@color/med_green_dark</item>
        <item name="colorAccent">@color/med_green_primary</item>
        <item name="android:windowBackground">@color/med_surface</item>
        <item name="android:textColorHint">@color/med_text_hint</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:backgroundTint">@color/med_green_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/med_text_on_primary</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
    </style>

    <style name="Widget.App.Button.Secondary" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/med_green_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Widget.App.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/medical_input_bg</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:textColor">@color/med_text_primary</item>
        <item name="android:textColorHint">@color/med_text_hint</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>
